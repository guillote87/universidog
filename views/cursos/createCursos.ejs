<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet" />
  <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/createCursos.css" />

    <title>Universidog</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>

  <main>
    <section>
      <div class="create-box">
        <h2>Agregar curso</h2>
        <form class="create-form" action="/cursos/create" method="POST" enctype="multipart/form-data">
          <div class="control-form">
            <input name="name" type="text" class="control" placeholder="Nombre de tu Curso" value="<%= locals.old? old.name : null  %>" />
          </div>
          <% if(locals?.errors?.name) {%>
            <p class="errors">
              <%=errors.name.msg %>
            </p>
            <% } %>
          <div class="control-form">
            <textarea name="description" class="control" value="<%= locals.old? old.description : null  %>" ></textarea>
          </div>
          <% if(locals?.errors?.description) {%>
            <p class="errors">
              <%=errors.description.msg %>
            </p>
            <% } %>
          <div class="control-form">
            <input name="image" type="file" accept=".jpg, .png" class="control" />
          </div>
          <% if(locals?.errors?.image) {%>
            <p class="errors">
              <%=errors.image.msg %>
            </p>
            <% } %>
          <div class="control-form">
            <select name="category" id="" required class="control">
              <option value="" disabled selected>- selecciona categoria - </option>
              <% allCategories.forEach(category => { %>
              <option value="<%= category.id %>"><%= category.description %></option>
              <% }); %>
            </select>

          </div>
          <div class="control-form">
            <input name="price" type="tel" placeholder="Precio" class="control" />
          </div>
          <% if(locals?.errors?.price) {%>
            <p class="errors">
              <%=errors.price.msg %>
            </p>
            <% } %>
          <button type="submit" class="control">Agregar</button>
        </form>
      </div>
    </section>
  </main>


  <script src="/js/menu.js"></script>
    <script src="/js/scrollreveal.js"></script>
    <script src="/js/scroll.js"></script>
</body>

</html>